{
    "name": "componentsui",
    "version": "0.8.4",
    "license": "MIT",
    "description": "A Modern and Minimal React UI Library built with TailwindCSS. Designed to provide you with a simple and intuitive set of UI components that are easy to use, customize and integrate into your React application.",
    "homepage": "https://izetmolla.com/",
    "author": {
        "name": "REDQ",
        "url": "https://redq.io/"
    },
    "bugs": {
        "url": "https://github.com/izetmolla/componentsui/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/izetmolla/componentsui.git"
    },
    "keywords": [
        "componentsui ",
        "components",
        "React Components",
        "react ui"
    ],
    "scripts": {
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "lint": "tsc",
        "dev": "concurrently \"yarn build --watch\"",
        "build": "tsup",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "test": "jest --coverage",
        "test:ci": "yarn test --ci",
        "test:watch": "jest --watch"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "files": [
        "dist/**"
    ],
    "dependencies": {
        "@floating-ui/react": "^0.26.15",
        "clsx": "1.2.1",
        "react-number-format": "5.1.4",
        "tailwind-merge": "1.14.0"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    },
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@headlessui/react": "^2.0.3",
        "@tailwindcss/forms": "0.5.3",
        "@testing-library/jest-dom": "6.1.3",
        "@testing-library/react": "14.0.0",
        "@testing-library/user-event": "14.5.1",
        "@types/jest": "29.5.5",
        "@types/react": "^18.2.19",
        "autoprefixer": "10.4.14",
        "babel-loader": "9.1.3",
        "clean-webpack-plugin": "4.0.0",
        "concurrently": "8.0.1",
        "css-loader": "6.8.1",
        "fs-extra": "11.1.1",
        "identity-obj-proxy": "3.0.0",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "postcss": "8.4.23",
        "postcss-loader": "7.3.0",
        "prettier": "3.0.1",
        "prettier-plugin-tailwindcss": "0.4.1",
        "react": "18.2.0",
        "style-loader": "3.3.3",
        "tailwindcss": "3.3.3",
        "ts-jest": "29.1.1",
        "tsconfig": "*",
        "tsconfig-paths-webpack-plugin": "4.0.1",
        "tsup": "7.2.0",
        "typescript": "5.1.6"
    },
    "publishConfig": {
        "access": "public"
    }
}